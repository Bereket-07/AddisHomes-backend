# MySQL Database Configuration for cPanel
# Copy this file to .env and update with your cPanel MySQL credentials

# Database Type (mysql or firestore)
DATABASE_TYPE=mysql

# MySQL Configuration (cPanel compatible)
MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_USER=your_cpanel_username
MYSQL_PASSWORD=your_mysql_password
MYSQL_DATABASE=your_cpanel_username_real_estate

# Legacy Firestore Configuration (keep for fallback)
GOOGLE_APPLICATION_CREDENTIALS=
SERVICE_URL=

# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
ADMIN_TG_USERNAME=your_admin_username
WEB_APP_URL=https://yourdomain.com

# Admin Configuration
ADMIN_PHONE_NUMBER=+251900000000
SECRET_KEY=your_secret_key_here
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Logging
LOG_LEVEL=INFO
